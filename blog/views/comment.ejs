<br />
<% if (comments) { %>
    <%comments.forEach(function (comment, index) { %>
    <p><a href="<%= comment.commentWebsite %>"><%= comment.commentName %></a>
    <span class="info"> 回复于 <%= comment.createDate %></span></p>
    <p><%- comment.commentContent %></p>
    <% }) %>
<% } %>


<form method="post" action="/comment">
<% if (user) { %>
  姓名：<input type="text" name="name" value="<%= user.userName %>" /><br />
  邮箱：<input type="text" name="email" value="<%= user.userEmail %>" /><br />
  网址：<input type="text" name="website" value="/u/<%= user.userName %>" /><br />
<% } else { %>
  姓名：<input type="text" name="name" /><br />
  邮箱：<input type="text" name="email" /><br />
  网址：<input type="text" name="website" value="http://" /><br />
<% } %>
  <input type="hidden" name="postId" value="<%= post._id %>" /><br />
  <textarea name="content" rows="5" cols="80"></textarea><br />
  <input type="submit" value="留言" />
</form>