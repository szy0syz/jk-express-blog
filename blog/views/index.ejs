<%- include header %>
<% posts.forEach(function (model, index) { %>
  <p><h2><a href="/p/<%= model._id %>"><%= model.postTitle %></a></h2></p>
  <p class="info">
    作者：<a href="/u/<%= model.postName %>"><%= model.postName %></a> | 
    日期：<%= model.createDate.std %>
  </p>
  <p><%- model.postBody %></p>
  <p class="info">阅读：<%= model.pv %> | 评论：<%= model.commentQty %> | 标签：<%- include printPostTags %></p>
  <hr />
<% }) %>
<%- include paging %>
<%- include footer %>